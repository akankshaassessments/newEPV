# Google OAuth Configuration
# Get these from Google Cloud Console
GOOGLE_CLIENT_ID=your-google-client-id-here
GOOGLE_CLIENT_SECRET=your-google-client-secret-here

# Google API Configuration (optional)
GOOGLE_REFRESH_TOKEN=
GOOGLE_SERVICE_ACCOUNT_FILE=service-account.json

# Flask Application Configuration
FLASK_SECRET_KEY=your-very-secure-secret-key-here
FLASK_ENV=development
# Set to 0 in production for security
OAUTHLIB_INSECURE_TRANSPORT=1

# Database Configuration
# For local development
DB_HOST=127.0.0.1
DB_USER=root
DB_PASSWORD=Motoming@123
DB_NAME=AFDW
DB_PORT=3306

# For production (update these values)
# DB_HOST=your-production-db-host
# DB_USER=your-production-db-user
# DB_PASSWORD=your-production-db-password
# DB_NAME=your-production-db-name

# SMTP Email Configuration
# Use Gmail SMTP or your organization's SMTP server
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@gmail.com
# For Gmail, use App Password (not your regular password)
SMTP_PASSWORD=your-gmail-app-password

# Application Settings
# Maximum file upload size (in MB)
MAX_CONTENT_LENGTH=16

# Upload directories
UPLOAD_FOLDER=uploads
PDF_UPLOAD_FOLDER=pdf_uploads

# Security Settings (for production)
# SESSION_COOKIE_SECURE=True
# SESSION_COOKIE_HTTPONLY=True
# SESSION_COOKIE_SAMESITE=Lax

# Logging Configuration
# LOG_LEVEL=INFO
# LOG_FILE=app.log

# Google Drive Configuration (optional)
# DRIVE_FOLDER_ID=your-google-drive-folder-id

# Backup Configuration (optional)
# BACKUP_ENABLED=True
# BACKUP_SCHEDULE=daily
# BACKUP_RETENTION_DAYS=30
